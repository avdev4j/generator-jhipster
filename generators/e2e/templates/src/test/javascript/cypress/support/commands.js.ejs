const isNotEmpty = (str) => str && str !== '';

Cypress.Commands.add("login", (email = "admin", password="admin") => {
    cy.visit('/login');
    cy.get('#username').type(email);
    cy.get('#password').type(password);
    cy.get('button[type="submit"]').click();
    cy.hash().should('eq', '');
    cy.contains(`You are logged in as user "${email}".`)
});

Cypress.Commands.add("logout", () => {
    cy.get('#account-menu').click();
    cy.get('a[href="/logout"]').click();
});

Cypress.Commands.add("register", (username, email, password, confirmPassword) => {
    cy.visit('/account/register');
    if(isNotEmpty(username)) cy.get('#username').type(username);
    if(isNotEmpty(email)) cy.get('#email').type(email);
    if(isNotEmpty(password)) cy.get('#firstPassword').type(password);
    if(isNotEmpty(confirmPassword)) cy.get('#secondPassword').type(confirmPassword);
    cy.get('button[type="submit"]').click();
});
